<% @needles.each do |needle| %>
  <tr>
    <td><%= needle.image %></td>
    <td><%= needle.hint1 %></td>
    <td><%= needle.hint2 %></td>
    <td><%= needle.hint3 %></td>
    <td><%= link_to 'Show', needle %></td>
    <td><%= link_to 'Edit', edit_needle_path(needle) %></td>
    <td><%= link_to 'Destroy', needle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

